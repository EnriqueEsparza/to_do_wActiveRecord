
<div class="form-group">
  <h3> Update the <%= @task.description %> task </h3>
  <br>
  <br>

  <form action='/tasks/<%= @task.id %>' method='post'>
    <input name='_method' type='hidden' value='patch'>

    <label for='description'> Rename Your <%=  @task.description() %> task:</label>
    <input id='description' name='description' type='text'>

    <button type='submit' class='btn btn-info'> Update </button>
<br>
<br>
  </form>
</div>

<div class="container">
  <form action='/tasks/<%= @task.id %>' method='post'>
    <input name='_method' type='hidden' value='delete'>
    <input id='id' name='id' type='hidden' value='<%= @task.id %>'>

    <button type="submit" class='btn btn-danger'>Delete <%=  @task.description() %></button>
  </form>
</div>

<p><h3><a href='/'>Return to Main Page</h3></a></p>
